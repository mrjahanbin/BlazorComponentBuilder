@inherits LayoutComponentBase
@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />
<div class="page">
    <main>
        @Body
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {

    public string PageCode { get; set; }

    enum Type
    {
        TextField,
        CheckBox,
        Radio,
        Code
    }

    private void Add(Type type)
    {
        switch (type)
        {
            case Type.TextField:
                PageCode += "salam";
                break;
            default: break;
        }
    }
}